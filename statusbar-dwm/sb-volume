#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BUTTON in
	1) setsid -f pavucontrol ;;
  2) pamixer -t ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	4) pamixer --allow-boost -i 1; setsid -f canberra-gtk-play -i audio-volume-change ;;
	5) pamixer --allow-boost -d 1; setsid -f canberra-gtk-play -i audio-volume-change ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" $0 ;;
esac

[ $(pamixer --get-mute) = true ] && echo "ï‘¦ " && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ï€¨"
elif [ "$vol" -lt "20" ]; then
	icon="ï€¦"
else
	icon="ï€§"
fi

echo "$icon $vol%"
